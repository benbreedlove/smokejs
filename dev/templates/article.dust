<article>
	<header>
		{#metadata}
		<h1>{title}</h1>
		<h2>{description}</h2>
		{/metadata}

		<section id="component_author">
			<h3>Authors</h3>
      {#load_collection models=attributes.byline template="byline" /}
		</section>

		<section id="component_tags">
			<h3>Tags</h3>
			<ul>
			  {#metadata.tags}
				<li>{.}</li>{~n}
			  {/metadata.tags}
			</ul>
		</section>

		{#master_image}
			<figure>
				<img src="{uri}" alt="{.metadata.alt_text}" /><br />
				<figcaption>{.metadata.caption} <cite>{.metadata.attribution}</cite></figcaption>
			</figure>
		{/master_image}

	</header>

	<section id="component_body">
    {#load_markdown data_uri=data_uri /}
    <b>Data url</b>: {data_uri}
	</section>

	<aside id="bottom_ad">
		<h2>bottom ad</h2>
    {#load_ad placement="bottommob" /}
    should be an ad above me
	</aside>
</article>
